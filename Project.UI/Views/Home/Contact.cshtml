@model Project.ENTITIES.DTOs.EmailSendDto
@{
    Layout = "_ContactLayout";
    ViewBag.Title = "İletişim";
    ViewBag.Author = "RinaBlog";
    ViewBag.Description = "Bizlerler iletişime geçin. RinaBlog";
    ViewBag.Tags = "Contact, Contact us, Bizimle İletişime Geçin, İletişim";
}

<div class="container contact">
    <form asp-controller="Home" asp-action="Contact" method="post">
        <div class="row">

            <div class="col-md-3">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                    <h2>İletişim</h2>
                    <h4>Bizlere bir mesaj bırakın !</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="fname" placeholder="İsminiz" name="txtName" asp-for="Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" placeholder="E-Posta Adresiniz" name="txtEmail" asp-for="Email">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-10">
                            <input class="form-control" rows="5" id="comment" placeholder="Konu giriniz" name="txtSubject" asp-for="Subject" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="comment" placeholder="Mesajınız..." name="txtMsg" asp-for="Message"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default" name="btnSubmit">Gönder</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
